<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.zway.fic.kanban.dao.KanbanDao">
    <sql id="Base_Column_List">
        kanban_id, owner_id, title, create_time, color, type, update_time
    </sql>

    <insert id="insert" parameterType="top.zway.fic.base.entity.doo.KanbanDO" useGeneratedKeys="true"
            keyColumn="kanban_id" keyProperty="kanbanId">
        insert into kanban ( owner_id, title, color, type)
        values ( #{ownerId}, #{title}, #{color}, #{type})
    </insert>
    <update id="updateBaseInfo">
        update kanban
        set title = #{title},
            color = #{color},
            update_time = CURRENT_TIMESTAMP
        where kanban_id = #{kanbanId}
    </update>
    <delete id="deleteByPrimaryKey">
        delete from kanban
        where kanban_id = #{kanbanId}
    </delete>
    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultType="top.zway.fic.base.entity.doo.KanbanDO">
        select
        <include refid="Base_Column_List" />
        from kanban
        where kanban_id = #{kanbanId}
    </select>

</mapper>